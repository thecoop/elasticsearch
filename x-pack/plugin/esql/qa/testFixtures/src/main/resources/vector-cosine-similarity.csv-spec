;

similarityAsPartOfExpression
required_capability: vector_similarity_functions_pushdown

from colors
| where color != "black" 
| eval score = round((1 + v_cosine(rgb_vector, [0, 255, 255]) / 2), 3) 
| sort score desc, color asc 
| limit 10
| keep color, score
;

color:text  | score:double
